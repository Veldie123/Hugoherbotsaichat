[[workflows.workflow]]
name = "LiveKit Agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx server/livekit-agent.ts dev"

[workflows.workflow.metadata]
outputType = "console"

